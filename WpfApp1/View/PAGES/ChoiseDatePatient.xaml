      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalTenthPractical.View.PAGES"
      mc:Ignorable="d" 
      Height="850" Width="786"
      Title="ChoiseDatePatient" FontFamily="Inter">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" FontSize="20" Text="Иванов Иван Иванович" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground }"/>
        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="14" Text="Текущая неделя" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground }"/>
        <ScrollViewer Grid.Row="3" Grid.Column="1" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="0,5,0,5">
                <WrapPanel x:Name="LB1"/>
            </Grid>
        </ScrollViewer>
    </Grid>
